page{
    background: #ebebeb;
}
#header{
    width:100%;
    height:260px;
    background: #3080c0;
    color:#ffffff;
}
#header .content{
    padding-top:60px;
    text-align: center;
}
#header .content image{
    width:100px;
    height:100px;
    border-radius: 100px;
}
#header .content .nickname{
    padding-top:20px;
}
#header .content .orther{
    padding-top:10px;
    font-size:15px;
}
#section .icon{
    width:23px;
    height:23px;
}
#section .menus_title{
    display: block;
}
#section .menus_title text{
    font-size:13px;
}
#menus{
    background: #ffffff;

    height:auto;
    width:100%;
}
#menus .content{
    height:45px;
    border-bottom: 0.5px solid #ebebeb; 
}
#menus .content .view{
    float: left;

}
#menus .content .left{
    /* font-size:15px; */
    height: 45px;
    line-height:45px;
    padding-left:20px;
}
#menus .content .text{
    height: 45px;
    float: right;
    margin-right:10px;
    line-height: 45px;
}

.menus text{
  margin-bottom: 20px;
  background-color: white;
}

.white{
  display: block;
  text-align: center;
  background-color: white;
  margin-top:10px;
  padding-bottom:5px;
}